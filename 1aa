#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>
#include <sys/wait.h> // Required for wait()

int main() {
    int pid = fork();

    if (pid < 0) {
        printf("Fork failed\n");
        exit(1);
    }
    else if (pid == 0) {
        // Child process
        execlp("whoami", "whoami", NULL);
        // If execlp fails
        perror("execlp failed");
        exit(1);
    }
    else {
        // Parent process
        printf("\nProcess id is: %d\n", getpid());
        wait(NULL);  // Wait for child to finish
        exit(0);
    }
}