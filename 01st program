
import java.io.*;

class GFG {
   
    static double Series(int n) {
        double sums = 0.0; 
        for (int i = 1; i <= n; i++) 
            sums += 1.0 / (i * i);
        return sums;
    }

    
    public static void main(String[] args) {
        int n = 3;
        double res = Series(n); // Use double to store the result
        System.out.printf("%.2f", res); 
    }
}